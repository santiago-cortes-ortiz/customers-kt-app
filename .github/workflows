name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Cambia esto a tu rama de trabajo principal si no es 'main'

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v2

      - name: Setup Node.js
        uses: actions/setup-node@v2
        with:
          node-version: 14  # Puedes cambiar esto a la versión de Node.js que estés utilizando

      - name: Install Dependencies
        run: npm ci

      - name: Build
        run: npx ng build

      - name: Deploy
        uses: JamesIves/github-pages-deploy-action@4.1.5
        with:
          branch: gh-pages  # La rama de GitHub Pages
          folder: dist/your-project-name  # Cambia 'your-project-name' al nombre de tu proyecto